{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Student Store CRUD",
    "description": "Studen Store Application API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Auth",
      "description": "API for auth endpoints"
    },
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "description": "Register user for the system",
        "produces": ["application/json"],
        "parameters": {
          "name": "user",
          "in": "body",
          "description": "user to add to the system",
          "required": true,
          "schema": {
            "$ref": "#/components/schemas/user"
          }
        },
        "responses": {
          "201": {
            "description": "New user object created.",
            "schema": {
              "$ref": "#/components/schemas/userWithoutPassword"
            }
          },
          "400": {
            "description": "Given email already exists in the database, or passwords do not match!"
          }
        }
      }
    },
    "/api/auth/signin": {
      "post": {
        "tags": ["Auth"],
        "description": "Log the user in with credentials.",
        "produces": ["application/json"],
        "parameters": {
          "name": "user",
          "in": "body",
          "description": "user to add to the system",
          "required": true,
          "schema": {
            "$ref": "#/components/schemas/user"
          }
        },
        "responses": {
          "200": {
            "description": "User successfully logged in.",
            "schema": {
              "$ref": "#/components/schemas/userWithoutPassword"
            }
          },
          "401": {
            "description": "Invalid email or password!"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "user": {
        "properties": {
          "_id": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "schoolName": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "phoneNumber": {
            "type": "number"
          },
          "address": {
            "type": "string"
          }
        }
      },
      "userWithoutPassword": {
        "properties": {
          "_id": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "schoolName": {
            "type": "string"
          },
          "phoneNumber": {
            "type": "number"
          },
          "address": {
            "type": "string"
          }
        }
      }
    }
  },
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"]
}
